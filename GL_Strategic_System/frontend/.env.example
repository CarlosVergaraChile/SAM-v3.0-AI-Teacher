# Next.js Application URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-api-key-here

# n8n Webhook URL (for receiving transcription results)
n8n_WEBHOOK_URL=http://localhost:5678/webhook/audio-processing

# Audio Upload Settings
AUDIO_UPLOAD_PATH=/uploads/audio
MAX_AUDIO_SIZE=104857600
# Max 100MB in bytes

# API Base URL (if backend is external)
BACKEND_API_URL=http://localhost:3001/api

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_MODE=false
